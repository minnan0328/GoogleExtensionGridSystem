{
	"manifest_version" : 2,
	"name" : "grid",
	"description" : "",
	"version" : "1.0",
    "browser_action": {
        "default_title": "",
        "default_icon": "/static/img/icon.png",
        "default_popup": "index.html"
    },
	"content_scripts" : [
		{
			"matches" : ["*://www.google.com.tw/*"],
			"js" : ["/static/js/manifest.js","/static/js/vendor.js","/static/js/app.js"],
			"css" : ["/static/css/app.css"]
		}
	],
	"permissions" : ["tabs","activeTab"]
}
