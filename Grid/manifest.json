{
	"manifest_version" : 2,
	"name": "Grid System",
	"description" : "",
	"version" : "1.0",
    "browser_action": {
        "default_title": "",
        "default_icon": "/static/img/icon.jpg",
        "default_popup": "index.html"
	},
	"web_accessible_resources": [
	"static/css/grid.css"
	],
	"background": {
		"scripts": ["/executedScripts/event.js"],
		"persistent": false
	},
	"permissions": [
	"tabs",
	"http://*/*",
	"https://*/*",
	"file://*/*",
	"storage",
	"activeTab"
	],
	"commands": {
		"Sketch-Layout": {
			"suggested_key": {
				"default": "Alt+S",
				"mac": "Alt+S"
			},
			"description": "Sketch Layout"
		},
		"Bootstrap-Layout": {
			"suggested_key": {
				"default": "Alt+B",
				"mac": "Alt+B"
			},
			"description": "Bootstrap Layout"
		},
		"_execute_browser_action": {
			"suggested_key": {
				"default": "Alt+A",
				"mac": "Alt+A"
			},
			"description": "Activate the extension"
		}
	}
}
